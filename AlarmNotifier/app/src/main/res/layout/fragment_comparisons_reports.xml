<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        tools:context="com.example.alexperez.alarmnotifier.ComparisonsReportsFragment"
        tools:showIn="@layout/activity_comparisons_reports">


        <RelativeLayout
            android:id="@+id/topBar"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true">

            <ImageButton
                android:id="@+id/home"
                android:layout_width="70dp"
                android:layout_height="74dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:background="@null"
                android:src="@drawable/home" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                android:text="Comparison Reports"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/back"
                android:layout_width="70dp"
                android:layout_height="74dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@null"
                android:src="@drawable/back" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/topBar"
            android:layout_centerHorizontal="true">

            <View
                android:id="@+id/bottomLine"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="123dp"
                android:background="#000000" />

            <View
                android:id="@+id/topLine"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#000000"
                android:layout_below="@+id/input2Spinner"
                android:layout_alignParentStart="true"
                android:layout_marginTop="14dp" />

            <View
                android:id="@+id/midline"
                android:layout_width="2dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/topLine"
                android:layout_centerHorizontal="true"
                android:background="#000000" />

            <TextView
                android:id="@+id/first_Input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:text="Input 1:"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/second_Input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:text="Input 2:"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_below="@+id/input1Spinner"
                android:layout_alignStart="@+id/first_Input" />

            <TextView
                android:id="@+id/first_Item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/bottomLine"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/topLine"
                android:layout_toStartOf="@+id/midline"
                android:text="Medium Text"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/second_Item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/first_Item"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/midline"
                android:layout_toEndOf="@+id/midline"
                android:text="Medium Text"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/unit_In_Fleet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="5dp"
                android:text="Unit In Fleet:"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_below="@+id/bottomLine"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/anomalies_To_Date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/unit_In_Fleet"
                android:layout_below="@+id/unit_In_Fleet"
                android:layout_marginTop="15dp"
                android:text="Anomalies To Date:"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/helix_Arc_Fault"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/anomalies_To_Date"
                android:layout_below="@+id/anomalies_To_Date"
                android:layout_marginTop="15dp"
                android:text="Helix Arc Fault:"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/high_Temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/helix_Arc_Fault"
                android:layout_below="@+id/helix_Arc_Fault"
                android:layout_marginTop="15dp"
                android:text="High Temp:"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/helix_Current_Threshold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/high_Temp"
                android:layout_below="@+id/high_Temp"
                android:layout_marginTop="18dp"
                android:text="Helix Current Threshold:"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/unit_In_Fleet"
                android:layout_marginLeft="5dp"
                android:layout_toEndOf="@+id/midline"
                android:text="Unit In Fleet:"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/anomalies_To_Date"
                android:layout_alignStart="@+id/textView6"
                android:text="Anomalies To Date:"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/helix_Arc_Fault"
                android:layout_alignStart="@+id/textView7"
                android:text="Helix Arc Fault:"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/helix_Current_Threshold"
                android:layout_alignStart="@+id/textView8"
                android:text="High Temp:"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/helix_Current_Threshold"
                android:layout_alignStart="@+id/textView9"
                android:text="Helix Current Threshold:"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <Spinner
                android:layout_width="65dp"
                android:layout_height="20dp"
                android:id="@+id/input1Spinner"
                android:layout_alignBaseline="@+id/first_Input"
                android:layout_alignBottom="@+id/first_Input"
                android:layout_toEndOf="@+id/unit_In_Fleet" />

            <EditText
                android:layout_width="115dp"
                android:hint="Keyword"
                android:singleLine="true"
                android:maxLines="1"
                android:background="@android:drawable/edit_text"
                android:textColor="@android:color/primary_text_light"
                android:layout_height="40dp"
                android:layout_toEndOf="@+id/input1Spinner"
                android:layout_marginLeft="15dp"
                android:id="@+id/input1keyword" />

            <Spinner
                android:layout_width="65dp"
                android:layout_height="20dp"
                android:id="@+id/input2Spinner"
                android:layout_alignBottom="@+id/second_Input"
                android:layout_alignStart="@+id/input1Spinner" />

            <EditText
                android:layout_width="115dp"
                android:layout_height="40dp"
                android:hint="Keyword"
                android:singleLine="true"
                android:maxLines="1"
                android:background="@android:drawable/edit_text"
                android:textColor="@android:color/primary_text_light"
                android:id="@+id/input2keyword"
                android:layout_above="@+id/midline"
                android:layout_alignStart="@+id/input1keyword" />

            <ImageButton
                android:layout_width="65dp"
                android:layout_height="70dp"
                android:id="@+id/searchButton"
                android:background="@null"
                android:src="@drawable/search_dark"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/textView8"
                android:layout_marginLeft="10dp" />
        </RelativeLayout>

    </RelativeLayout>
    <!-- Side navigation drawer UI -->
    <ListView
        android:id="@+id/navList"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="left|start"
        android:background="#ffeeeeee" />

</android.support.v4.widget.DrawerLayout>
