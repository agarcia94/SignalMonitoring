<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        tools:context="com.example.alexperez.alarmnotifier.AnomalyFragment">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Acknowledged Alarms:"
            android:id="@+id/ackAlarmText"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

        <ListView
            android:id="@+id/ackAlarmsList"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/ackAlarmText"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Current Alarm:"
            android:textColor="#FF0000"
            android:id="@+id/cAlarmsText"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="78dp" />

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="350dp"
            android:id="@+id/cAlarmList"
            android:layout_alignTop="@+id/cAlarmsText"
            android:layout_alignParentStart="true"
            android:layout_marginTop="40dp"
            android:layout_above="@+id/ackAlarmText" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold"
            android:textColor="#ffffffff"
            android:background="#3498DB"
            android:gravity="center"
            android:text="Welcome "
            android:id="@+id/welcome"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold"
            android:textColor="#ffffffff"
            android:background="#3498DB"
            android:gravity="center"
            android:text="Location: "
            android:id="@+id/location"
            android:layout_below="@+id/welcome"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

    <!-- Side navigation drawer UI -->
    <ListView
        android:id="@+id/navList"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="left|start"
        android:background="#ffeeeeee" />

</android.support.v4.widget.DrawerLayout>
