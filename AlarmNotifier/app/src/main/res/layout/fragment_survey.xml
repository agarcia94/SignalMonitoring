<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:scrollbars="vertical"
    tools:context="com.example.alexperez.alarmnotifier.SurveyFragment"
    tools:showIn="@layout/activity_survey">

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <TextView
            android:id="@+id/Date"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date/Time: " />

        <TextView
            android:id="@+id/name"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Name: " />

        <TextView
            android:id="@+id/site"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Site: " />

        <TextView
            android:id="@+id/antenna"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Antenna " />

        <TextView
            android:id="@+id/satellite"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Satellite: " />

        <TextView
            android:id="@+id/alarmFault"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Alarm/Fault:" />

        <TextView
            android:id="@+id/equipAffec"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Equipment Affected " />

        <TextView
            android:id="@+id/equipVendor"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Equipment Vendor: " />

        <TextView
            android:id="@+id/severity"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Severity: " />

        <TextView
            android:id="@+id/descriptionOfIA"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Description of Issue/Anomaly (Please be as detailed as Possible): " />

        <EditText
            android:id="@+id/answerOfIA"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:inputType="textMultiLine"
            android:lines="8"
            android:minLines="2"
            android:gravity="top"
            android:scrollHorizontally="false"
            android:scrollbarStyle="insideInset"
            android:scrollbars="vertical"
            android:background="@android:drawable/edit_text"
            android:textColor="@android:color/primary_text_light"
            />

        <TextView
            android:id="@+id/resolveIA"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="How lond did it take you to resolve this issue/anomaly" />

        <Spinner
            android:id="@+id/spinner1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:entries="@array/timeToFinish_arrays"
            android:prompt="@string/timeToFinish_prompt" />

        <TextView
            android:id="@+id/resolution"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Resolution?"/>

        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:entries="@array/timeToResolution_arrays"
            android:prompt="@string/timeToFinish_prompt"
            />

        <EditText
            android:id="@+id/other"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:inputType="textMultiLine"
            android:lines="8"
            android:minLines="2"
            android:gravity="top"
            android:scrollHorizontally="false"
            android:scrollbarStyle="insideInset"
            android:scrollbars="vertical"
            android:background="@android:drawable/edit_text"
            android:textColor="@android:color/primary_text_light"/>

        <TextView
            android:id="@+id/moratorium"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Was This a Moratorium?"/>

        <Spinner
            android:id="@+id/spinner3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:entries="@array/moratorium_arrays"
            android:prompt="@string/timeToFinish_prompt"
            />

        <TextView
            android:id="@+id/outage"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Was There An Outage?"/>

        <Spinner
            android:id="@+id/spinner4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:entries="@array/outage_arrays"
            android:prompt="@string/timeToFinish_prompt"
            />

        <TextView
            android:id="@+id/outageTime"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="If YES, How Long Was The Outage?"/>

        <Spinner
            android:id="@+id/spinner5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:entries="@array/outageTime_arrays"
            android:prompt="@string/timeToFinish_prompt"
            />

        <Button
            android:id="@+id/submitSurvey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:layout_marginTop="15dp"
            android:textStyle="bold"
            android:textColor="#ffffffff"
            android:background="#3498DB"
            android:layout_gravity="center_vertical" />

    </LinearLayout>

</ScrollView>