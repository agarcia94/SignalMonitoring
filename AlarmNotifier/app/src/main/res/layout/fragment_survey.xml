<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:scrollbars = "vertical"
    android:maxLines = "15"
    tools:context="com.example.alexperez.alarmnotifier.SurveyFragment"
    tools:showIn="@layout/activity_survey">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/linearLayout1"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical|center_horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date/Time: "
        android:id="@+id/Date"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name: "
        android:id="@+id/name"
        android:layout_below="@+id/Date"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Site: "
        android:id="@+id/site"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/name"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Antenna "
        android:id="@+id/antenna"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/site"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Satellite: "
        android:id="@+id/satellite"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/antenna"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Event Type: "
        android:id="@+id/eventType"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/satellite"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Event Parameter: "
        android:id="@+id/eventParameter"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/eventType"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alarm ID: "
        android:id="@+id/alarmID"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/eventParameter"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Equipment Affected "
        android:id="@+id/equipAffec"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/alarmID"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Equipment Vendor: "
        android:id="@+id/equipVendor"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/equipAffec"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Severity: "
        android:id="@+id/severity"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/equipVendor"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description of Issue/Anomaly (Please be as detailed as Possible): "
        android:id="@+id/descriptionOfIA"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/severity"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/answerOfIA"
        android:layout_below="@+id/descriptionOfIA"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How lond did it take you to resolve this issue/anomaly"
        android:id="@+id/resolveIA"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/answerOfIA"
        />

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/resolveIA"
        android:entries="@array/timeToFinish_arrays"
        android:prompt="@string/timeToFinish_prompt" />
</LinearLayout>

</ScrollView>
