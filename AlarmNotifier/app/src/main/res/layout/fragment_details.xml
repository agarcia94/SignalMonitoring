<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.alexperez.alarmnotifier.DetailsFragment">

        <Button
            android:id="@+id/accept"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:textStyle="bold"
            android:textColor="#ffffffff"
            android:background="#3498DB"
            android:text="Accept Responsibility"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/detailsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FF0000"
            android:layout_gravity="center"
            android:text="Large Text"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_below="@+id/home"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="31dp" />

        <ImageButton
            android:id="@+id/home"
            android:layout_width="70dp"
            android:layout_height="74dp"
            android:layout_gravity="center_horizontal|top"
            android:background="@null"
            android:src="@drawable/home"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <ImageButton
            android:layout_width="70dp"
            android:layout_height="74dp"
            android:id="@+id/back"
            android:layout_gravity="left|top"
            android:background="@null"
            android:src="@drawable/back"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <ImageButton
            android:layout_width="70dp"
            android:layout_height="74dp"
            android:id="@+id/report"
            android:layout_gravity="right|top"
            android:background="@null"
            android:src="@drawable/report"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Site:"
            android:id="@+id/site"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/detailsText"
            android:layout_alignParentStart="true"
            android:layout_marginStart="34dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Antenna:"
            android:id="@+id/antenna"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/site"
            android:layout_alignStart="@+id/site" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Satellite:"
            android:id="@+id/satellite"
            android:textStyle="bold"
            android:layout_below="@+id/antenna"
            android:layout_alignStart="@+id/site"
            android:layout_marginTop="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alarm/Fault:"
            android:id="@+id/alarmfault"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/satellite"
            android:layout_alignStart="@+id/satellite" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Equipment Affected:"
            android:textStyle="bold"
            android:id="@+id/equipmentAffected"
            android:layout_below="@+id/alarmfault"
            android:layout_alignStart="@+id/alarmfault"
            android:layout_marginTop="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Equipment Vendor:"
            android:textStyle="bold"
            android:id="@+id/equipmentVendor"
            android:layout_below="@+id/equipmentAffected"
            android:layout_alignStart="@+id/equipmentAffected"
            android:layout_marginTop="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Severity:"
            android:textStyle="bold"
            android:id="@+id/severity"
            android:layout_below="@+id/equipmentVendor"
            android:layout_alignStart="@+id/equipmentVendor"
            android:layout_marginTop="15dp" />

    </RelativeLayout>

    <!-- Side navigation drawer UI -->
    <ListView
        android:id="@+id/navList"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="left|start"
        android:background="#ffeeeeee" />

</android.support.v4.widget.DrawerLayout>
